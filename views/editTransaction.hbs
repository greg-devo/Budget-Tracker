<h1 class="heading">Edit Transaction</h1>
<form method="post" action="{{transaction.id}}">
  <label for="type" class="form-label mt-2">Type</label>
  <select class="form-select" name="type">
    {{#if income}}
      <option selected value="Income">Income</option>
      <option value="Expense">Expense</option>
    {{else}}
      <option value="Income">Income</option>
      <option selected value="Expense">Expense</option>
    {{/if}}
  </select>
  <label for="amount" class="form-label mt-2">Amount</label>
  <div class="input-group">
    <span class="input-group-text">$</span>
    <input type="number" value="{{transaction.amount}}" class="form-control" step="0.01" min="0" name="amount">
  </div>
  <label for="date" class="form-label mt-2">Date</label>
  <input type="text" value="{{transaction.date}}" class="form-control" onfocus="(this.type='date')" onblur="(this.type='text')" name="date">
  <label for="category" class="form-label mt-2">Category</label>
  <input type="text" class="form-control" value="{{transaction.category}}" name="category">
  <label for="description" class="form-label mt-2">Description</label>
  <input type="text" class="form-control" value="{{transaction.description}}" name="description">
  <div class="d-grid">
    <button type="submit" class="btn btn-primary mt-4">Update</button>
  </div>
</form>