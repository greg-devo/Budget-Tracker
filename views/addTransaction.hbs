<h1 class="heading">Add Transaction</h1>
<form method="post" action="">
  <label for="type" class="form-label mt-2">Type</label>
  <select class="form-select" name="type" required>
    <option selected value="Income">Income</option>
    <option value="Expense">Expense</option>
  </select>
  <label for="amount" class="form-label mt-2">Amount</label>
  <div class="input-group">
    <span class="input-group-text">$</span>
    <input type="number" placeholder="0.00" class="form-control" step="0.01" min="0" name="amount" required>
  </div>
  <label for="date" class="form-label mt-2">Date</label>
  <input type="date" placeholder="MM/DD/YYYY" class="form-control" name="date" required>
  <label for="category" class="form-label mt-2">Category</label>
  <input type="text" class="form-control" placeholder="Enter category..." name="category" required>
  <label for="description" class="form-label mt-2">Description</label>
  <input type="text" class="form-control" placeholder="Enter description" name="description" required>
  <div class="d-grid">
    <button type="submit" class="btn btn-primary mt-4">Add</button>
  </div>
</form>